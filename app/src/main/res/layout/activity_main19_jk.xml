<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main19ActivityJK">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#a8c74765"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        app:buttonGravity="top|bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/usuario2" />
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingBottom="5dp">
            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="91dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/corazones2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:text="Media Manzana"
                android:textAlignment="textStart"
                android:textColor="#C74765"
                android:textSize="20sp" />
        </RelativeLayout>



    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="321dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="160dp"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="273dp"
            android:layout_gravity="center|top"

            app:cardCornerRadius="6dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/lapiz"
                android:id="@+id/lapiz"
                android:onClick="onClick"/>

        </android.support.v7.widget.CardView>
    </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="118dp"
        android:orientation="horizontal"
        android:layout_marginTop="370dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:src="@drawable/asd"
            android:id="@+id/chat"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:paddingLeft="10dp"
            android:src="@drawable/those"
            android:id="@+id/galeria"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay fotos para mostrar"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@id/linear"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:background="#a8c74765">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="57dp"
        android:src="@drawable/corazones" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="332dp"
        android:text="Media Manzana"
        android:textColor="#fff"
        android:textSize="32sp" />

    <TextView
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="299dp"
        android:gravity="center"
        android:text="Encuentra a tu pareja perfecta"
        android:textColor="#fff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnface"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/btngoogle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="238dp"
        android:background="@drawable/backface"
        android:drawableLeft="@drawable/facebook"
        android:drawablePadding="-15dp"
        android:paddingLeft="16dp"
        android:text="Continuar con Facebook"
        android:textColor="#fff"
        android:textSize="10dp" />
    <Button
        android:id="@+id/btngoogle"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="190dp"
        android:background="@drawable/backgoogl"
        android:drawableLeft="@drawable/busqueda"
        android:drawablePadding="-20dp"
        android:paddingLeft="19dp"
        android:text="Continuar con Google"
        android:textColor="#1C83F8"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="168dp"
        android:text="nunca publicamos nada sin tu autorizacion..."
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnlog"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        android:background="@drawable/btnlogin"
        android:text="Inicia sesion con tu correo electronico"
        android:textColor="#fff"
        android:textSize="9dp" />
    <TextView
        android:id="@+id/text01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="66dp"
        android:text="@string/preg_count"
        android:textColor="#fff"
        android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>